html,
body {
	@apply h-full overflow-hidden;
}

.custom-avatar {
	width: 200px;
	height: 200px;
	border-radius: 50%;
	margin: 1rem auto;
	cursor: pointer;
}

.custom-avatar:hover .overlay {
	opacity: 0.5;
}

.custom-avatar .overlay {
	text-align: center;
	border-radius: 50%;
	font-weight: 700;
	color: #fff;
	width: 100%;
	height: 100%;
	background: #000;
	z-index: 2;
	opacity: 0;
	transition: all 0.3s ease-out;
}
